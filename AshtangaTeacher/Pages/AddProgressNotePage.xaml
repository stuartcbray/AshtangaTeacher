<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AshtangaTeacher.AddProgressNotePage">    
   	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0"/>
  	</ContentPage.Padding>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Text="Add Note"
               HorizontalOptions="Center"
               Font="Large"/>

        <Frame Padding="12"
               Grid.Row="1">
            <BoxView BackgroundColor="#FFAAAAAA" />
        </Frame>

        <Editor Grid.Row="1" Keyboard="Text"
                x:Name="NoteText" />

        <Button Text="Save Note"
                x:Name="SaveNoteButton"
                Grid.Row="2" />
    </Grid>
</ContentPage>
