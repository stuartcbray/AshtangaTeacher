<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AshtangaTeacher.TeacherInfoPage">
	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0"/>
  	</ContentPage.Padding>
  	<Grid Padding="20">
	    <Grid.RowDefinitions>
	        <RowDefinition Height="Auto" />
	        <RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
	    </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
	      <ColumnDefinition Width="*" />
	    </Grid.ColumnDefinitions>
	        
	    <Label Text="Add Teacher Information" Font="22" HorizontalOptions="Start" />
	    <Entry Text="{Binding ShalaName}" Placeholder="Shala Name" Grid.Row="1" HorizontalOptions="Fill" />
	    <Button Text="Save" Grid.Row="2" Command="{Binding SaveShalaCommand}" IsEnabled="{Binding IsReady}" />
		<Label Text="{Binding ErrorMessage}" Grid.Row="3" Font="16" TextColor="Maroon" VerticalOptions="Center" HorizontalOptions="Center" />

		<StackLayout Grid.Row="4" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsLoading}">
			<ActivityIndicator
		       IsRunning="true"
		       Color="Black"
		       VerticalOptions="Start"
		       HorizontalOptions="CenterAndExpand" />
			<Label Text="Saving" Opacity="0.5"/>
		</StackLayout>


	</Grid>
</ContentPage>
